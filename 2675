#include <iostream>
using namespace std;

int main()
{
    int n;
    int a;
    string str;
    string result;
    cin >> n;
    for (int t = 0; t < n; t++)
    {
        cin >> a >> str;
        result = "";
        for (int i = 0; i < str.length(); i++)
            for (int j = 0; j < a; j++)
                result += str[i];
        cout << result << endl;
    }
}
